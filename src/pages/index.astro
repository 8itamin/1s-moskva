---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getHome } from "../lib/airtable";

const data = await getHome("moskva");
---
<BaseLayout
  title={`Услуги 1С в ${data.city}`}
  description={`Программы 1С, внедрение, обучение и программисты 1С в ${data.city}`}
  canonical="https://1s-moskva.programister.ru/"
>

<header class="header">
  <img src="/img/logo.png" alt="Programister" />
  <a href={`tel:${data.phone}`} class="phone">{data.phone}</a>
</header>

<section class="hero">
  <h1>{data.hero_title}</h1>
  <p>{data.hero_subtitle}</p>
</section>

<section class="actions">
  <h2>Акции</h2>
  {data.actions.map(a => (
    <div class="action">
      <img src={a.image} alt={a.title} />
      <p>{a.title}</p>
    </div>
  ))}
</section>

<section class="faq">
  <h2>Вопросы по 1С</h2>
  {data.faq.map(f => (
    <details>
      <summary>{f.q}</summary>
      <p>{f.a}</p>
    </details>
  ))}
</section>

<footer>
  <img src="/img/logo-footer.png" />
  <p>{data.address}</p>
</footer>

</BaseLayout>
